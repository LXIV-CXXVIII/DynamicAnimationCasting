{
		"$schema": "https://raw.githubusercontent.com/microsoft/vcpkg/master/scripts/vcpkg.schema.json",
		"name": "dodge-framework-ng",
		"version-string": "1.0.0",
		"port-version": 0,
		"description": "A SKSE plugin to trigger dodge animation.",
		"homepage": "https://www.skyrimng.com",
		"license": "Apache-2.0",
		"features": {
				"scripts": {
						"description": "Install Papyrus sources for this program to develop on top of it."
				},
				"scripts-dev": {
						"description": "Install Papyrus sources necessary to develop scripts for this plugin.",
						"dependencies": [
								"bethesda-skyrim-scripts",
								{
										"name": "skse",
										"default-features": false,
										"features": [
												"scripts"
										]
								}
						]
				},
				"plugin": {
						"description": "Build the SKSE plugin.",
						"dependencies": [
							"commonlibsse-ng",
								"span-lite",
								"tomlplusplus"
						]
				},
				"tests": {
						"description": "Build tests for the SKSE plugin.",
						"dependencies": [
								{
										"name": "dodge-framework-ng",
										"default-features": false,
										"features": [
												"plugin"
										]
								},
								"catch2"
						]
				}
		},
		"default-features": [
				"scripts-dev",
				"plugin",
				"tests"
		]
}
